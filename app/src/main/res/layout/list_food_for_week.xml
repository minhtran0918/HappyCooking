<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_recipe"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/a"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <View
            android:id="@+id/toolbar_image_panel_top"
            android:layout_width="match_parent"
            android:layout_height="136dp" />

        <FrameLayout
            android:id="@+id/toolbar_image_panel_bottom"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:tag="sticky-hastransparancy-nonconstant">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7f000000"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/title_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="6dp"
                android:paddingRight="8dp"
                android:ellipsize="end"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Đây là tên món ăn Đây là tên món ăn Đây là tên món ăn Đây là tên món ăn Đây là tên món ăn"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
